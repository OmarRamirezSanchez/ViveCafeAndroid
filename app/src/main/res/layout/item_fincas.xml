<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">
    <ImageView
        android:id="@+id/item_finca_im_background"
        android:scaleType="fitXY"
        android:src="@drawable/imagen_ixhuatlan"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/item_im_fitro"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#5976FF03"/>

    <TextView
        android:id="@+id/item_finca_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/item_finca_defaulr"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/item_finca_im_background"
        android:layout_alignParentStart="true" />
</RelativeLayout>