<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/tv_ajustes_email"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_ajustes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omar "/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_ajustes_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramirez Sanchez"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ajustes_phone"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="52-58-49-25-44"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ajustes_cardnumber"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de Tajeta">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4111-1111-1111-1111" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_ajustes_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_ajustes_cerrarsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/fajus_cerrarsesion"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textColor="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignBaseline="@+id/bt_ajustes_cerrarsesion"
        android:layout_alignBottom="@+id/bt_ajustes_cerrarsesion"
        android:layout_alignEnd="@+id/linearLayout2" />
</RelativeLayout>